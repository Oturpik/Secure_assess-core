# Application
APP_NAME=Security Scanner Platform
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Security
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database - PostgreSQL
DATABASE_URL=postgresql://scanner_user:scanner_pass@localhost:5432/scanner_platform
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0
DB_ECHO=False

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# MongoDB
MONGODB_URL=mongodb://scanner_user:scanner_pass@localhost:27017/scan_results
MONGODB_DB_NAME=scan_results

# RabbitMQ
RABBITMQ_URL=amqp://scanner_user:scanner_pass@localhost:5672/
RABBITMQ_EXCHANGE=scanner_exchange

# Workspace Configuration
WORKSPACE_TTL_MINUTES=30
MAX_WORKSPACE_SIZE_GB=2
WORKSPACE_CLEANUP_INTERVAL_MINUTES=5

# Scanning Configuration
MAX_CONCURRENT_SCANS=10
SCAN_TIMEOUT_MINUTES=60
ENABLE_INCREMENTAL_SCAN=True
FULL_SCAN_FILE_THRESHOLD=100

# SCM Integrations (OAuth Apps)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_WEBHOOK_SECRET=your_webhook_secret

GITLAB_CLIENT_ID=your_gitlab_client_id
GITLAB_CLIENT_SECRET=your_gitlab_client_secret

# External Services
NVD_API_KEY=your_nvd_api_key
NVD_API_URL=https://services.nvd.nist.gov/rest/json/cves/2.0

# Celery (Background Tasks)
CELERY_BROKER_URL=amqp://scanner_user:scanner_pass@localhost:5672/
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=True
CORS_METHODS=*
CORS_HEADERS=*

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_ENABLED=True

# File Upload
MAX_UPLOAD_SIZE_MB=100
ALLOWED_FILE_EXTENSIONS=.json,.yaml,.yml,.txt

# Feature Flags
ENABLE_SAST=True
ENABLE_SCA=True
ENABLE_DAST=True
ENABLE_IAST=False

# Compliance
DEFAULT_COMPLIANCE_FRAMEWORKS=OWASP,CWE